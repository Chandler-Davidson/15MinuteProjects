<UserControl x:Class="WPFWeather.DayViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFWeather"
             mc:Ignorable="d" Height="110" Width="80.25">
    <GroupBox
        BorderBrush="Transparent"
        x:Name="ParentGroupBox">
        <StackPanel
            Orientation="Vertical">
            <Label Content="Sat"
                   HorizontalAlignment="Center"
                   Style="{StaticResource DayDetialLight}"/>
            <Image
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="D:\Users\Chandler\Documents\GitHub\15MinuteProjects\WPFWeather\Media\sunny.png" Height="56" Width="56" Margin="11,0,13,0"/>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                <Label Content="95°"/>
                <Label Content="71°"
                       Style="{StaticResource DayDetialLight}"/>
            </StackPanel>
        </StackPanel>
    </GroupBox>
</UserControl>
