<Application x:Class="WPFWeather.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFWeather"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="StackPanel" x:Key="LocationDetails">
            <Style.Resources>
                <Style TargetType="Label">
                    <Setter Property="Foreground" Value="#707070"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="Margin" Value="10,-6,0,-6"/>
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="Label" x:Key="CurrentTemperature">
            <Setter Property="FontSize" Value="70"/>
        </Style>
        <Style TargetType="StackPanel" x:Key="ButtonSelector">
            <Setter Property="Margin" Value="16,20,0,0"/>
            <Style.Resources>
                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="17"/>
                    <Setter Property="Margin" Value="0,0,2,0"/>
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="Label" x:Key="DayDetialLight">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>


    </Application.Resources>
</Application>
